{
  "name": "Troud",
  "version": "1.0.0",
  "description": "Troud Application",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "eslint": "eslint src/ --fix",
    "format": "prettier --write \"src/*.+(js|jsx|json)\"",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:update": "jest --updateSnapshot",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MasterSecondChance/Troud-Front.git"
  },
  "keywords": [
    "React",
    "Troud",
    "Clothe",
    "Exchange"
  ],
  "author": "Alexander Alvarez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MasterSecondChance/Troud-Front/issues"
  },
  "homepage": "https://github.com/MasterSecondChance/Troud-Front#readme",
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.29",
    "@fortawesome/free-brands-svg-icons": "^5.13.1",
    "@fortawesome/free-solid-svg-icons": "^5.13.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "axios": "^1.10.0",
    "date-fns": "^2.15.0",
    "firebase": "^10.14.1",
    "history": "^5.3.0",
    "install": "^0.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icomoon": "^2.1.5",
    "react-router-dom": "^6.30.1",
    "react-test-renderer": "^18.3.1",
    "react-toastify": "^6.0.8",
    "react-transition-group": "^4.4.1",
    "sass": "^1.89.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/eslint-parser": "^7.27.1",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "vite": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__test__/setupTest.js"
    ],
    "moduleNameMapper": {
      "\\.(styl|css|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "setupFiles": [
      "<rootDir>/src/__test__/jest.setup.js"
    ]
  }
